---
import MailIcon from "./MailIcon.astro";
import WebIcon from "./WebIcon.astro";
import LinkedIcon from "./LinkedIcon.astro";

// websiteUrl, linkedinUrl, email are optional
const { name, imageUrl, websiteUrl, linkedinUrl, email } = Astro.props;
---

<div class="flex flex-row items-start text-left max-w-xs mx-auto">
  <img
    src={imageUrl}
    alt={name}
    class="w-20 h-20 sm:w-24 sm:h-24 rounded-full object-cover mb-3"
  />
  <h3 class="text-lg font-semibold mb-2">{name}</h3>
  <p class="text-sm text-neutral-300 mb-3 leading-relaxed"><slot /></p>
  <div class="flex gap-3 text-neutral-400">
    {
      linkedinUrl && (
        <a
          href={linkedinUrl}
          target="_blank"
          aria-label="LinkedIn"
          class="hover:text-carmen-red transition-colors"
        >
          <LinkedIcon />
        </a>
      )
    }
    {
      email && (
        <a
          href={email}
          target="_blank"
          aria-label="Email"
          class="hover:text-carmen-red transition-colors"
        >
          <MailIcon />
        </a>
      )
    }
    {
      websiteUrl && (
        <a
          href={websiteUrl}
          target="_blank"
          aria-label="Website"
          class="hover:text-carmen-red transition-colors"
        >
          <WebIcon />
        </a>
      )
    }
  </div>
</div>
