---
import clsx from "clsx";
const { icon, title } = Astro.props;
---

<!-- use tailwindcss to make a good looking card with icon image, title, and content (slot) -->
<div
  class="border border-gray-300 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-300"
>
  {icon && <i class={clsx("fas", icon, "text-5xl mb-4 text-carmen-red")} />}
  {title && <h3 class="text-xl font-display font-semibold mb-4">{title}</h3>}
  <div class="text-gray-700">
    <slot />
  </div>
</div>
