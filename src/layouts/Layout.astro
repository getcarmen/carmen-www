---
import TrefoilLogo from "../components/TrefoilLogo.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />

    <!-- link to multiple favicons of all plausibly useful sizes -->
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicons/favicon-16.svg"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicons/favicon-32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="48x48"
      href="/favicons/favicon-48.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="64x64"
      href="/favicons/favicon-64.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="/favicons/favicon-96.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="128x128"
      href="/favicons//favicon-128.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="180x180"
      href="/favicons/favicon-180.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/favicons/favicon-192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/favicons/favicon-512.png"
    />

    <meta name="generator" content={Astro.generator} />
    <title>Carmen AI: Put Your Data to Work</title>
    <script>
      // Redirect www to non-www (the cheap way)
      if (location.host.startsWith("www.")) {
        location.host = location.host.slice(4);
      }
    </script>
  </head>
  <body class="font-sans bg-neutral-50">
    <div class="flex flex-col min-h-svh">
      <header class="w-full border-b border-neutral-200 py-4 px-3 sm:px-6">
        <nav class="flex items-center justify-between gap-4 text-lg sm:text-xl">
          <a
            href="/"
            class="font-display font-semibold flex-grow text-neutral-900 hover:text-carmen-red transition-colors duration-200 flex items-center gap-x-1"
            ><TrefoilLogo /> Carmen AI</a
          >
          <a
            href="mailto:Graham Thompson <graham@getcarmen.ai>,Dave Peck <dave@getcarmen.ai>"
            title="Email Dave and Graham"
            class="inline-flex rounded-full px-4 py-1.5 text-sm sm:text-base font-semibold transition bg-neutral-950 text-white hover:bg-neutral-500"
            >Get in touch</a
          >
        </nav>
      </header>
      <slot />
      <footer
        class="w-full border-t border-neutral-300 py-4 px-3 sm:px-6 flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-neutral-600"
      >
        <p>&copy; {new Date().getFullYear()} Carmen.AI. All rights reserved.</p>
        <!-- <nav>
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
        <a href="/contact">Contact</a>
      </nav> -->
      </footer>
    </div>
  </body>
</html>
