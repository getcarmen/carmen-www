---
import Layout from "../layouts/Layout.astro";
import WebIcon from "../components/WebIcon.astro";
import MailIcon from "../components/MailIcon.astro";
import LinkedIcon from "../components/LinkedIcon.astro";
import Person from "../components/Person.astro";
---

<Layout>
  <!-- Hero content -->
  <section id="hero">
    <h1
      class="font-display text-carmen-red text-5xl sm:text-7xl font-medium tracking-tight text-balance leading-none"
    >
      Onboard your users faster with better data.
    </h1>
    <p class="mt-6 text-2xl text-neutral-700 leading-normal">
      We bring modern AI solutions to the tough data challenges that slow
      customer adoption of your service.
    </p>
  </section>

  <!-- About us -->
  <section
    class="py-12 sm:py-16 mt-16 sm:mt-24 -mx-3 sm:-mx-6 lg:-mx-8 px-3 sm:px-6 lg:px-8"
  >
    <h2
      class="font-display text-xl sm:text-2xl font-medium tracking-tight mb-8 sm:mb-10 text-left"
    >
      About Us
    </h2>

    <div
      class="flex flex-col sm:flex-row justify-left items-start gap-8 sm:gap-12 lg:gap-16 max-w-3xl mx-auto"
    >
      <Person
        name="Graham Thompson"
        imageUrl="/img/graham_thompson.jpg"
        websiteUrl="#"
        linkedinUrl="#"
        email="#"
      >
        A few words about Graham go here.
      </Person>

      <Person
        name="Dave Peck"
        imageUrl="/img/dave_peck.jpg"
        websiteUrl="#"
        linkedinUrl="#"
        email="#"
      >
        A few words about Dave go here.
      </Person>
    </div>
  </section>
</Layout>
